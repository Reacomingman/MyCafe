@{
    ViewBag.Title = "Home Page";
}

<link href="~/Content/Carousel/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/footer-distributed-with-address-and-phones.css" rel="stylesheet" />
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css">
<script src="~/Scripts/Carousel/jquery.min.js"></script>
<script src="~/Scripts/Carousel/popper.min.js"></script>
<script src="~/Scripts/Carousel/bootstrap.min.js"></script>
<style>
    /* Make the image fully responsive */
    .carousel-inner img {
        width: 100%;
        height: 60%;
    }

    .homelogo {
        color: white;
        font-size: 30px;
    }

    .lognv {
        color: white;
        font-size: 20px;
    }

    
</style>


<nav class="navbar navbar-expand-md navbar-dark bg-dark sticky-top">
    <div class="container-fluid">
        @Html.ActionLink("My Cafe", "Index", "Home", new { area = "" }, new { @class = "navbar-brand homelogo" })

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#mynav">
            <span class="navbar-toggler-icon"></span>
        </button>


        <div class="collapse navbar-collapse" id="mynav">
            <ul class="navbar-nav ml-auto lognv">
                @if (Request.IsAuthenticated)
                {
                    @Html.AntiForgeryToken()
                <li>
                    @Html.ActionLink("My Page", "Main", "Home")
                    <a>  &nbsp &nbsp </a>
                </li>               
                    

                    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                    {
                        @Html.AntiForgeryToken()

                        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
                    }

                }
                else
                {

                    <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "lognv" })</li>

                }

            </ul>
        </div>
    </div>
</nav>




<section>
    <div id="slides" class="carousel slide" data-ride="carousel">
        <ul class="carousel-indicators">
            <li data-target="#slides" data-slide-to="0" class="active"></li>
            <li data-target="#slides" data-slide-to="1"></li>
            <li data-target="#slides" data-slide-to="2"></li>
        </ul>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/Assets/Images/cafe-266651_1280.jpg" />
                <div class="carousel-caption">
                    <h1>Welcome to My Cafe</h1>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/Assets/Images/coffee-358859_1280.jpg" />
                <div class="carousel-caption">
                    <h1>Welcome to My Cafe</h1>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/Assets/Images/Restaurant-Popota.jpg" />
                <div class="carousel-caption">
                    <h1>Welcome to My Cafe</h1>
                </div>
            </div>
        </div>

    </div>
</section>


<footer class="footer-distributed">

    <div class="footer-left">
        <h1 style="font-size:4vw;">Opening Hour</h1>
        <p style="font-size:2vw;">Weekday: 10:00 - 20: 00 </p>
        <br>
        <p style="font-size:2vw;">Weekend: 10:00 - 22: 00 </p>

    </div>

    <div class="footer-center">
        <h1 style="font-size:4vw;">Contact</h1>
        <p style="font-size:2vw;">Phone Number: 0-000-000-000</p>
        <p style="font-size:2vw;">Email: email@email.com</p>
        <h1 style="font-size:4vw;">Address</h1>
        <p style="font-size:2vw;">Monash Caufield Campus</p>
        <a href="@Url.Action("Map", "Home")"><i class="fa fa-map-marker"></i></a>


    </div>

    <div class="footer-right">

        <h1 style="font-size:4vw;">Follow us</h1>

        <div class="footer-icons" style="font-size:2vw;">

            <a href="#"><i class="fa fa-facebook"></i></a>
            <a href="#"><i class="fa fa-twitter"></i></a>
            <a href="#"><i class="fa fa-linkedin"></i></a>
            <a href="#"><i class="fa fa-github"></i></a>
           
        </div>
        <br>

        <div class="content" id='map'></div>

    </div>

    

</footer>


